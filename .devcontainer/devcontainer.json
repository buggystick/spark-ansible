{
  "name": "spark-ansible dev",
  "build": { "dockerfile": "Dockerfile" },
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "redhat.ansible",
        "ms-python.python",
        "ms-python.vscode-pylance",
        "eamodio.gitlens",
        "GitHub.vscode-pull-request-github"
      ]
    }
  },
  "postCreateCommand": "python3 -m pip install -U pip && pip install -r requirements.txt"
}
