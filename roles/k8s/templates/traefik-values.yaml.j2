ports:
  web:
    port: {{ traefik_web_container_port | default(8000, true) }}
    expose:
      default: true
    exposedPort: {{ traefik_web_service_port | default(80, true) }}
{% if traefik_service_type | lower == 'nodeport' %}
    nodePort: {{ traefik_web_node_port }}
{% endif %}
  websecure:
    port: {{ traefik_websecure_container_port | default(8443, true) }}
    expose:
      default: true
    exposedPort: {{ traefik_websecure_service_port | default(443, true) }}
{% if traefik_service_type | lower == 'nodeport' %}
    nodePort: {{ traefik_websecure_node_port }}
{% endif %}
  dashboard:
    expose:
      default: false

service:
  enabled: true
  type: "{{ traefik_service_type }}"

ingressRoute:
  dashboard:
    enabled: false
